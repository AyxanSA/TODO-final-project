<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/3e1dfd533c.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Public/style.css">
    <title>Document</title>
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" style="background-color: #337ab7;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navSag">
                    <button class="btn" id="icon1"><i class="fa fa-bars"></i></button>
                    <button type="button" class="btn navbar-btn" data-toggle="modal" data-target="#exampleModal">
                        <i class="fas fa-plus"></i> New
                    </button>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <div class="nav navbar-nav navbar-right">
                    <input type="text" id="searchContent" class="form-control" placeholder="Search" style="margin-right: 10px;">
                    <a href="/Account/LogOut" class="btn btn-danger navbar-btn">EXIT</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ADD TITLE</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input id="newAdd" type="text" class="form-control">
                </div>
                <div class="modal-footer">
                    <button type="button" id="close" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="AddNew" class="btn btn-primary">Add</button>
                </div>
                <div class="modal-footer">
                </div>

            </div>
        </div>
    </div>
    @RenderBody()

    <footer class="container-fluid text-center footer">
        <p>Footer Text</p>
    </footer>
    <script src="~/Public/script.js"></script>
    @RenderSection("scripts", false);
    
</body>

</html>